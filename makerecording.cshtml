@{
    Response.ContentType = "text/xml";
    
    if (Request["email"]==null) {
        Response.Write("Must specify an email address");
        Response.Close();
    }
    
    var twiml = new Twilio.TwiML.TwilioResponse();
    twiml.Say("Hello.  This is a call from the Twilio voicemail transcription demo.  Please leave a voicemail after the beep, and remember to speak clearly.");
    twiml.Record(
        new { 
            transcribe = "true", 
            transcribeCallback = string.Format("transcribed.cshtml?email={0}", 
            Request["email"]), 
            action = "goodbye.cshtml", 
            maxLength = "30" }
        );
}
@Html.Raw(twiml.ToString())